<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

 <!-- Launch section of code -->
 <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            name="TestLink"
            delegateDescription="TestLink test plan execution runner."
            delegateName="TestLink"
            delegate="org.dbfacade.testlink.eclipse.plugin.launcher.TestLinkLaunchConfigurationDelegate"
            modes="run, debug"
            id="org.dbfacade.testlink.eclipse.plugin.launchconfig"
            sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
            sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
            <!-- migrationDelegate="org.eclipse.jdt.internal.junit.launcher.JUnitMigrationDelegate" -->
      </launchConfigurationType>
   </extension>
 
   <extension
         point="org.eclipse.debug.core.launchConfigurationComparators">
      <launchConfigurationComparator
            attribute="org.dbfacade.testlink.eclipse.plugin.CONTAINER"
            class="org.dbfacade.testlink.eclipse.plugin.launcher.TestLinkContainerComparator"
            id="org.dbfacade.testlink.eclipse.plugin.containerComparator">
      </launchConfigurationComparator>
   </extension>
   
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            icon="icons/testlink_logo.png"
            configTypeID="org.dbfacade.testlink.eclipse.plugin.launchconfig"
            id="org.eclipse.jdt.junit.launchimage">
      </launchConfigurationTypeImage>
   </extension>
   
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            type="org.dbfacade.testlink.eclipse.plugin.launchconfig"
            helpContextId="org.dbfacade.testlink.eclipse.plugin.testlink_tab_group"
            class="org.dbfacade.testlink.eclipse.plugin.launcher.TestLinkTabGroup"
            id="org.dbfacade.testlink.eclipse.plugin.launchConfigurationTabGroup.testlink">
         <launchMode
               perspective="org.eclipse.debug.ui.DebugPerspective"
               description="testlink.debug"
               mode="debug">
         </launchMode>
         <launchMode
               description="testlink.run"
               mode="run">
         </launchMode>
      </launchConfigurationTabGroup>
   </extension>
  
  <!-- Command only support. None launch section -->
   <extension
         point="org.eclipse.ui.commands">
         
      <category
            name="TestLink"
            id="testlink.eclipse.plugin.commands.category">
      </category>
   
      <command
            name="Open Test Plan Runner"
            categoryId="testlink.eclipse.plugin.commands.category"
            id="testlink.eclipse.plugin.commands.testlinkview">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="testlink.eclipse.plugin.commands.testlinkview" 
            class="org.dbfacade.testlink.eclipse.plugin.handlers.TestLinkHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="testlink.eclipse.plugin.commands.testlinkview"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="TestLink"
               mnemonic="M"
               id="testlink.eclipse.plugin.menus.sampleMenu">
            <command
                  commandId="testlink.eclipse.plugin.commands.testlinkview"
                  mnemonic="S"
                  id="testlink.eclipse.plugin.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="testlink.eclipse.plugin.toolbars.sampleToolbar">
            <command
                  commandId="testlink.eclipse.plugin.commands.testlinkview"
                  icon="icons/testlink_logo.png"
                  tooltip="Open TestLink Test Plan Viewer"
                  id="testlink.eclipse.plugin.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="TestLink"
            class="org.dbfacade.testlink.eclipse.plugin.preferences.TestLinkPage"
            id="org.dbfacade.testlink.eclipse.plugin.preferences.TestLinkPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.dbfacade.testlink.eclipse.plugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="TestLink"
            id="testlink.eclipse.plugin">
      </category>
      <view
            name="TestLink Test Plan Execution"
            icon="icons/testlink_logo.png"
            category="testlink.eclipse.plugin"
            class="org.dbfacade.testlink.eclipse.plugin.views.TestLinkView"
            id="org.dbfacade.testlink.eclipse.plugin.views.TestLinkView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.dbfacade.testlink.eclipse.plugin.views.TestLinkView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
